<%- include('partials/header'); -%>  

<h1>Make a post</h1>
  <form class="" action="/compose" method="post">
    <label for="postTitle" class="form-label">Title:</label>
    <input type="text" name="postTitle" id="postTitle" class="form-control"> 
    
    <label for="postBody" class="form-label">Post:</label>
    <textarea name="postBody" class="form-control" row="8" cols="50"> </textarea>

    <label for="postAuthor" class="form-label">Your name:</label>
    <input type="text" name="postAuthor" id="postAuthor" class="form-control">
    
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
  </form>
<%- include('partials/footer'); -%>